<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<BorderPane fx:id="borderPane" minHeight="500.0" minWidth="750.0"
	xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.esf.xmlParser.fxml.MainController">
	<top>
		<VBox fx:id="borderPaneTop">
			<MenuBar fx:id="menubar" BorderPane.alignment="CENTER">
				<menus>
					<Menu mnemonicParsing="false" text="%menuItemFile">
						<items>
							<MenuItem fx:id="menuItemClose" mnemonicParsing="false"
								onAction="#menuItemClose" text="%menuItemClose" />
							<MenuItem fx:id="menuItemChooseFile" mnemonicParsing="false"
								onAction="#menuItemChooseFile" text="%menuItemChooseFile" />
						</items>
					</Menu>
					<Menu mnemonicParsing="false" text="%menuItemHelp">
						<items>
							<MenuItem fx:id="menuItemAbout" mnemonicParsing="false"
								onAction="#menuItemAbout" text="%menuItemAbout" />
						</items>
					</Menu>
				</menus>
			</MenuBar>
			<AnchorPane>
				<children>
					<Button fx:id="buttonSearch" defaultButton="true"
						mnemonicParsing="false" onAction="#buttonSearchClick" text="%search"
						AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
						AnchorPane.topAnchor="0.0" />
					<TextField fx:id="textFieldSearch"
						AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
						AnchorPane.rightAnchor="76.0" AnchorPane.topAnchor="0.0" />
				</children>
			</AnchorPane>
		</VBox>
	</top>
</BorderPane>
